{
    "mcpServers": {
      "convex": {
        "command": "npx",
        "args": ["-y", "convex@latest", "mcp", "start"]
      },
      "Context7": {
        "command": "npx",
        "args": ["-y", "@upstash/context7-mcp"]
      },
      "stripe": {
        "command": "npx",
        "args": [
          "-y",
          "@stripe/mcp",
          "--tools=all",
          "--api-key=STRIPE_SECRET_KEY"
        ]
      }
    }
  }